    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch game",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "args": ["-level", "levels/big.json", "-debug"]
        },

    
        {
            "name": "Launch editor",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/editor",
            "buildFlags": ["-tags", "dialog"],
            "args": ["-dir", "../../assets"]
        }
    ]
}